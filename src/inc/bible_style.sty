\newcommand{\bib}[1]{%
    \IfStrEqCase{#1}{%
        {EI}{Einheitsübersetzung}%
        {SCHL}{Schlachter 2000}%
        {HFA}{Hoffnung für Alle}%
        {ELB}{Elbfelder}%
        {GR}{Griechisch}%
        {LUT}{Luther 2017}%
        {NUE}{Neue ev. Übersetzung}%
        {BDF}{Bibel Deutsche Fassung}%
    }[\textbf{#1}]%
}



% Makros für Bibelzitate
\newcommand{\bibtit}[1]{\large\bib{#1}}
\newcommand{\tmpbib}{Hello}
%\newcommand{\bv}[2]{\bibleverse {#1}(#2)}

\newenvironment{bibeltext}[3]{%
    \quote \begin{itshape}
	(\bibtit{#1})\newline			
		\renewcommand{\tmpbib}{\textbf{\bibleverse{#2}(#3)}}		 
	}{%
    \newline    
    \tmpbib
	\end{itshape}        
    \endquote		
}

\newenvironment{bibelbox2}[3]{%			
        \renewcommand{\tmpbib}{\textbf{\bibleverse{#2}(#3)}}
        \begin{tcolorbox}[
            title=\tmpbib \hspace{1.5cm} (\bibtit{#1}),
            colback=black!2!white,
            colframe=black!55!black,
            width=\textwidth,
            halign=justify  
        ]
	}{%	
		\newline		
        \end{tcolorbox}	
	\endquote		
}
\newcommand{\tmpbibtext}[3]{\textbf{\bibleverse{#2}(#3)}\quad(\bibtit{#1})}
\newenvironment{bibelbox}[3]{%
    \begin{tcolorbox}[
        title=\tmpbibtext{#1}{#2}{#3},
        colback=black!2!white,
        colframe=black!55!black,
        width=\textwidth,
        before skip=1em,
        after skip=1em,
        fonttitle=\bfseries,
        sharp corners
    ]
}{%
    \end{tcolorbox}
}

\newcommand{\biblezit}[2]{%
	\bib{SCHL} 	
	\bibleverse{#1}(#2)
}

